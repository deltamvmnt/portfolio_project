<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div>
        <% if params[:plan] == '2' %>
          <h1>PRO</h1>
          <p>
            Sign up for Pro, get access to more. Get details on how to contact
            your talent-to-be.
          </p>
        <% else %>
          <h1>BASIC</h1>
          <p>
            Sign up for Basic, get initial access to creators
          </p>
        <% end %>
      </div>
      <div class="well">
        <h2>Sign up</h2>
        
        <% if params[:plan] == '2' %>
            <%= render "pro_form" %>
        <% else %>
            <%= render "basic_form" %>
        <% end %>
      </div>

        
        
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>